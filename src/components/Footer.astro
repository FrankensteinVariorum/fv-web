---
import dayjs from "dayjs";
import utc from "dayjs/plugin/utc";

dayjs.extend(utc);

const lastModified = dayjs()
    .utc(Astro.props.lastModified)
    .format("HH:mm:ss DD MMMM YYYY UTC");
import { defineConfig } from 'astro/config';
---

