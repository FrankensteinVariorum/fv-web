---
import Layout from '../../layouts/Layout.astro';
import Header from '../Header';
// import OptionsSelector from './OptionsSelector';
import Controls from './Controls';

---
<Layout>
  <main id="primary-content" role="main">
    <h1>Variorum Viewer</h1>
  </main>
  <div id="root">
    <div>
      <div class="App">
        <section id='viewer'>
          <Controls client:load />
          <Header edition=''/>
          <!-- <OptionsSelector client:load/> -->

          <div id="viewer__contents" class="viewer__cols">
            <slot/>
          </div>

          <hr class='line' />
          <footer id="viewer_pagination_controls">
            <Controls client:load />
          </footer>
        </section>
      </div>
    </div>
  </div>
</Layout>

<style lang="scss">
  @import "../../styles/sass/style.sass";
</style>


