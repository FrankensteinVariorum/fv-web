---
import Home from '../layouts/Home.astro';
import { sources } from '../data/units.json'
import slugify from '../components/helpers/slugify.js';

import { Image } from '@astrojs/image/components';
import FronticepieceImage from '../../public/images/general/fronticepiece.jpg';
import {HeatmapNavigation} from "../components/HeatmapNavigation";

const start = `/viewer/${sources.find(s=>s.label == "1818").label}/${slugify(sources.find(s=>s.label == "1818").units[0].label)}`
// const start = `/viewer/${sources[0].label}/${slugify(sources[0].units[0].label)}`
---
<Home>
      <section>
        <div id='epigraph'>
          Did I request thee, Maker, from my clay<br />
          To mould me man?  Did I solicit thee<br />
          From darkness to promote me? — <span class='epigraph-source'>PARADISE LOST</span>
        </div>
        <div id='home-title'>
        <!-- <div class="attribution">Mary Shelley’s</div> -->
          <h1>Frankenstein</h1>
          <div class='subtitle'>A Digital Variorum Edition</div>
        </div>
        <div id='home-cta' class='btn'>
          <a href={start} title='Use the Variorum Viewer'>Variorum Viewer</a>
        </div>
        <div class="attribution">The Variorum Viewer initiates with the Preface of the 1818 edition.
         Try mousing over and clicking the interactive heatmap to locate heavily altered passages.
           Heatmap columns represent from left to right locations in the manuscript, 1818, Thomas, 1823, and 1831 editions.
        </div>

      </section>
 <aside id='fronticepiece'>

       <!-- <Image src={FronticepieceImage} alt='Fronticepiece Image'
          width={950} format="jpg" /> -->
          <?xml version="1.0" encoding="UTF-8"?>
          <figure class="front">
          <figcaption>Heatmap navigation</figcaption>
              <HeatmapNavigation/>
          </figure>
        </aside>
        </Home>
